<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TaskerZoo - Gestión de Suministros</title>
    <link rel="stylesheet" href="/css/estiloTaskerZooOutput.css" />
</head>

<body class="bg-[#EDEDED] min-h-screen flex flex-col md:flex-row">

    <%- include('./partials/nav.ejs', { paginaActual: 'suministros' }) %>

        <!-- Contenido principal -->
        <main class="flex-1 md:ml-56 p-6 space-y-6">

            <%- include('./partials/header.ejs', { nombreEmpleado: nombreEmpleado }) %>

                <h1 class="text-2xl font-bold text-gray-800 mb-4">Gestión de Suministros</h1>

                <!-- Formulario para añadir suministros -->
                <div class="bg-white p-6 rounded-lg shadow max-w-5xl mx-4">
                    <h2 class="text-lg font-semibold mb-4">Añadir Nuevo Suministro</h2>
                    <form action="/suministros" method="POST"
                        class="flex flex-col md:flex-row md:items-center md:space-x-4 space-y-4 md:space-y-0">
                        <input type="text" name="nombre" placeholder="Nombre del suministro" required
                            class="border border-gray-300 rounded px-4 py-2 w-full md:w-auto" />
                        <input type="number" name="cantidad" placeholder="Cantidad" min="0"
                            class="border border-gray-300 rounded px-4 py-2 w-full md:w-auto" />
                        <input type="text" name="descripcion" placeholder="Descripción"
                            class="border border-gray-300 rounded px-4 py-2 w-full md:w-auto" />
                        <select name="zona" required class="border border-gray-300 rounded px-4 py-2 w-full md:w-auto">
                            <option value="">Zona</option>
                            <option value="Sabana">Sabana</option>
                            <option value="Reptiles">Reptiles</option>
                            <option value="Aviario">Aviario</option>
                            <option value="Acuático">Acuático</option>
                        </select>
                        <button type="submit"
                            class="bg-[#477963] text-white px-6 py-2 rounded hover:bg-[#365c4c] transition">
                            Añadir
                        </button>
                    </form>
                </div>

                <!-- Aquí mostrar los que hay -->

        </main>
</body>

</html>