<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/css/estiloTaskerZooOutput.css" />
    <link rel="icon" href="/favicons/faviconTaskerZoo.ico" type="image/x-icon">
</head>

<body class="bg-[#EDEDED] min-h-screen flex flex-col md:flex-row border-t-8 border-b-8 border-[#477963]">

    <%- include('./partials/nav.ejs', { paginaActual: 'personal' }) %>

        <!-- Contenido principal -->
        <main class="flex-1 md:ml-56 p-4 md:p-6 space-y-6 overflow-x-hidden">

            <%- include('./partials/header.ejs', { nombreEmpleado: nombreEmpleado }) %>

                <!-- SecciÃ³n de Empleados por Rol -->
                <div class="space-y-8">
                    <!-- Administradores -->
                    <div class="bg-white rounded-lg shadow overflow-hidden">
                        <div class="bg-blue-800 px-6 py-3 flex items-center gap-3"> <!-- Azul marino -->
                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24"
                                fill="none" stroke="#ffffff" stroke-width="2" stroke-linecap="round"
                                stroke-linejoin="round" class="lucide lucide-shield-user-icon lucide-shield-user">
                                <path
                                    d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z" />
                                <path d="M6.376 18.91a6 6 0 0 1 11.249.003" />
                                <circle cx="12" cy="11" r="4" />
                            </svg>
                            <h2 class="text-xl font-semibold text-white">Administradores</h2>
                        </div>
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 p-6">
                            <% empleados.filter(e=> e.rol === 'admin').forEach(empleado => { %>
                                <div class="border rounded-lg p-4 hover:bg-gray-50 transition-colors">
                                    <div class="flex items-center space-x-4">
                                        <div
                                            class="bg-gray-200 rounded-full w-12 h-12 flex items-center justify-center text-xl">
                                            <%= empleado.nombre.charAt(0).toUpperCase() %>
                                        </div>
                                        <div>
                                            <h3 class="font-medium">
                                                <%= empleado.nombre %>
                                            </h3>
                                            <p class="text-sm text-gray-600">
                                                <%= empleado.email %>
                                            </p>
                                            <span
                                                class="inline-block mt-1 px-2 py-1 text-xs rounded-full bg-blue-100 text-blue-800">
                                                <%= empleado.rol %>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <% }); %>
                        </div>
                    </div>

                    <!-- Veterinarios -->
                    <div class="bg-white rounded-lg shadow overflow-hidden">
                        <div class="bg-blue-500 px-6 py-3 flex items-center gap-3"> <!-- Azul -->
                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24"
                                fill="none" stroke="#ffffff" stroke-width="2" stroke-linecap="round"
                                stroke-linejoin="round" class="lucide lucide-syringe-icon lucide-syringe">
                                <path d="m18 2 4 4" />
                                <path d="m17 7 3-3" />
                                <path d="M19 9 8.7 19.3c-1 1-2.5 1-3.4 0l-.6-.6c-1-1-1-2.5 0-3.4L15 5" />
                                <path d="m9 11 4 4" />
                                <path d="m5 19-3 3" />
                                <path d="m14 4 6 6" />
                            </svg>
                            <h2 class="text-xl font-semibold text-white">Veterinarios</h2>
                        </div>
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 p-6">
                            <% empleados.filter(e=> e.rol === 'veterinario').forEach(empleado => { %>
                                <div class="border rounded-lg p-4 hover:bg-gray-50 transition-colors">
                                    <div class="flex items-center space-x-4">
                                        <div
                                            class="bg-gray-200 rounded-full w-12 h-12 flex items-center justify-center text-xl">
                                            <%= empleado.nombre.charAt(0).toUpperCase() %>
                                        </div>
                                        <div>
                                            <h3 class="font-medium">
                                                <%= empleado.nombre %>
                                            </h3>
                                            <p class="text-sm text-gray-600">
                                                <%= empleado.email %>
                                            </p>
                                            <span
                                                class="inline-block mt-1 px-2 py-1 text-xs rounded-full bg-blue-100 text-blue-500">
                                                <%= empleado.rol %>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <% }); %>
                        </div>
                    </div>

                    <!-- Cuidadores -->
                    <div class="bg-white rounded-lg shadow overflow-hidden">
                        <div class="bg-green-500 px-6 py-3 flex items-center gap-3"> <!-- Verde -->
                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24"
                                fill="none" stroke="#ffffff" stroke-width="2" stroke-linecap="round"
                                stroke-linejoin="round" class="lucide lucide-users-icon lucide-users">
                                <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2" />
                                <path d="M16 3.128a4 4 0 0 1 0 7.744" />
                                <path d="M22 21v-2a4 4 0 0 0-3-3.87" />
                                <circle cx="9" cy="7" r="4" />
                            </svg>
                            <h2 class="text-xl font-semibold text-white">Cuidadores</h2>
                        </div>
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 p-6">
                            <% empleados.filter(e=> e.rol === 'cuidador').forEach(empleado => { %>
                                <div class="border rounded-lg p-4 hover:bg-gray-50 transition-colors">
                                    <div class="flex items-center space-x-4">
                                        <div
                                            class="bg-gray-200 rounded-full w-12 h-12 flex items-center justify-center text-xl">
                                            <%= empleado.nombre.charAt(0).toUpperCase() %>
                                        </div>
                                        <div>
                                            <h3 class="font-medium">
                                                <%= empleado.nombre %>
                                            </h3>
                                            <p class="text-sm text-gray-600">
                                                <%= empleado.email %>
                                            </p>
                                            <span
                                                class="inline-block mt-1 px-2 py-1 text-xs rounded-full bg-green-100 text-green-800">
                                                <%= empleado.rol %>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <% }); %>
                        </div>
                    </div>

                    <!-- Monitores -->
                    <div class="bg-white rounded-lg shadow overflow-hidden">
                        <div class="bg-orange-500 px-6 py-3 flex items-center gap-3"> <!-- Naranja -->
                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24"
                                fill="none" stroke="#ffffff" stroke-width="2" stroke-linecap="round"
                                stroke-linejoin="round" class="lucide lucide-speech-icon lucide-speech">
                                <path
                                    d="M8.8 20v-4.1l1.9.2a2.3 2.3 0 0 0 2.164-2.1V8.3A5.37 5.37 0 0 0 2 8.25c0 2.8.656 3.054 1 4.55a5.77 5.77 0 0 1 .029 2.758L2 20" />
                                <path d="M19.8 17.8a7.5 7.5 0 0 0 .003-10.603" />
                                <path d="M17 15a3.5 3.5 0 0 0-.025-4.975" />
                            </svg>
                            <h2 class="text-xl font-semibold text-white">Monitores</h2>
                        </div>
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 p-6">
                            <% empleados.filter(e=> e.rol === 'monitor').forEach(empleado => { %>
                                <div class="border rounded-lg p-4 hover:bg-gray-50 transition-colors">
                                    <div class="flex items-center space-x-4">
                                        <div
                                            class="bg-gray-200 rounded-full w-12 h-12 flex items-center justify-center text-xl">
                                            <%= empleado.nombre.charAt(0).toUpperCase() %>
                                        </div>
                                        <div>
                                            <h3 class="font-medium">
                                                <%= empleado.nombre %>
                                            </h3>
                                            <p class="text-sm text-gray-600">
                                                <%= empleado.email %>
                                            </p>
                                            <span
                                                class="inline-block mt-1 px-2 py-1 text-xs rounded-full bg-orange-100 text-orange-800">
                                                <%= empleado.rol %>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <% }); %>
                        </div>
                    </div>

                    <!-- Personal de Taquilla -->
                    <div class="bg-white rounded-lg shadow overflow-hidden">
                        <div class="bg-gray-500 px-6 py-3 flex items-center gap-3"> <!-- Gris -->
                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24"
                                fill="none" stroke="#ffffff" stroke-width="2" stroke-linecap="round"
                                stroke-linejoin="round" class="lucide lucide-tickets-icon lucide-tickets">
                                <path d="m4.5 8 10.58-5.06a1 1 0 0 1 1.342.488L18.5 8" />
                                <path d="M6 10V8" />
                                <path d="M6 14v1" />
                                <path d="M6 19v2" />
                                <rect x="2" y="8" width="20" height="13" rx="2" />
                            </svg>
                            <h2 class="text-xl font-semibold text-white">Personal de Taquilla</h2>
                        </div>
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 p-6">
                            <% empleados.filter(e=> e.rol === 'taquilla').forEach(empleado => { %>
                                <div class="border rounded-lg p-4 hover:bg-gray-50 transition-colors">
                                    <div class="flex items-center space-x-4">
                                        <div
                                            class="bg-gray-200 rounded-full w-12 h-12 flex items-center justify-center text-xl">
                                            <%= empleado.nombre.charAt(0).toUpperCase() %>
                                        </div>
                                        <div>
                                            <h3 class="font-medium">
                                                <%= empleado.nombre %>
                                            </h3>
                                            <p class="text-sm text-gray-600">
                                                <%= empleado.email %>
                                            </p>
                                            <span
                                                class="inline-block mt-1 px-2 py-1 text-xs rounded-full bg-gray-100 text-gray-800">
                                                <%= empleado.rol %>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <% }); %>
                        </div>
                    </div>
                </div>
        </main>
</body>

</html>