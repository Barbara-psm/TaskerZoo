                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-animundo-brown text-animundo-beige py-12 text-center">
        <div class="container mx-auto px-4">
            <div class="flex justify-center mb-6">
                <img src="/img/logo-animundo.png" alt="Logo Animundo" class="h-16">
            </div>
            <p class="mb-2 text-lg">© 2025 Animundo - Centro de Conservación Animal</p>
            <p class="mb-4 text-lg">Contacto: info@animundo.com · Tel: +34 123 456 789</p>
        </div>
    </footer>

    <script>
        // Inicializar mapa con estilo ESRI World Imagery
        const lat = <%= zoo.lat %>;
        const lon = <%= zoo.lon %>;

        const map = L.map('esriMap').setView([lat, lon], 17);

        L.tileLayer('https://server.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}', {
            attribution: 'Tiles © Esri - Source: Esri, i-cubed, USDA, USGS, AEX, GeoEye, Getmapping, Aerogrid, IGN, IGP, UPR-EGP, and the GIS User Community',
            maxZoom: 18
        }).addTo(map);

        L.marker([lat, lon]).addTo(map).bindPopup('Parque Zoológico Animundo');
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Configuración de Flatpickr para la fecha de visita
            flatpickr("#fechaVisita", {
                dateFormat: "Y-m-d",
                altInput: true,
                altFormat: "d/m/Y",
                locale: "es",
                minDate: "today",
                disable: [
                    function (date) {
                        // Deshabilitar días específicos
                        return (date.getDay() === 1); // 1 es el lunes
                    }
                ]
            });

            // Mostrar/ocultar detalles de tarjeta según método de pago
            document.getElementById('metodo-pago').addEventListener('change', function () {
                const tarjetaSection = document.getElementById('datos-tarjeta');
                tarjetaSection.classList.toggle('hidden', this.value !== 'tarjeta');
            });

            // Calcular y mostrar resumen al cambiar cantidades
            const calcularResumen = () => {
                const adultos = parseInt(document.getElementById('cantidadAdultos').value) || 0;
                const ninos = parseInt(document.getElementById('cantidadNinos').value) || 0;
                const seniors = parseInt(document.getElementById('cantidadSeniors').value) || 0;
                const total = (adultos * 15) + (ninos * 10) + (seniors * 12);

                if (total > 0) {
                    document.getElementById('resumen-compra').classList.remove('hidden');
                    document.getElementById('detalles-resumen').innerHTML = `
                <p>Adultos: ${adultos} x €15 = €${adultos * 15}</p>
                <p>Niños: ${ninos} x €10 = €${ninos * 10}</p>
                <p>Seniors: ${seniors} x €12 = €${seniors * 12}</p>
            `;
                    document.getElementById('total-resumen').textContent = `Total: €${total}`;
                } else {
                    document.getElementById('resumen-compra').classList.add('hidden');
                }
            };

            // Ir cambiando las cantidades
            ['cantidadAdultos', 'cantidadNinos', 'cantidadSeniors'].forEach(id => {
                document.getElementById(id).addEventListener('change', calcularResumen);
            });

            // Manejar el envío del formulario
            document.getElementById('formularioEntradas').addEventListener('submit', async function (e) {
                e.preventDefault();

                // Obtener valores
                const fechaVisita = document.getElementById('fechaVisita').value;
                const adultos = parseInt(document.getElementById('cantidadAdultos').value) || 0;
                const ninos = parseInt(document.getElementById('cantidadNinos').value) || 0;
                const seniors = parseInt(document.getElementById('cantidadSeniors').value) || 0;
                const totalEntradas = adultos + ninos + seniors;

                try {
                    // Validaciones más completas
                    if (!fechaVisita) throw new Error('Por favor selecciona una fecha de visita');
                    if (isNaN(adultos)) throw new Error('Cantidad de adultos no válida');
                    if (isNaN(ninos)) throw new Error('Cantidad de niños no válida');
                    if (isNaN(seniors)) throw new Error('Cantidad de seniors no válida');
                    if (totalEntradas <= 0) throw new Error('Debes comprar al menos una entrada');

                    // Enviar datos al servidor
                    const res = await fetch('/api/entradas', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({
                            fecha: fechaVisita,
                            entradas: totalEntradas
                        })
                    });

                    const data = await res.json();

                    if (!res.ok) {
                        throw new Error(data.message || 'Error al registrar la compra');
                    }

                    // Mostrar modal en lugar de un alert
                    const modal = document.createElement('div');
                    modal.innerHTML = `
            <div id="confirmModal" class="fixed inset-0 bg-black bg-opacity-75 flex items-center justify-center z-50 transition-opacity duration-300">
                <div class="bg-white rounded-xl p-8 max-w-md mx-4 text-center animate-[bounceIn_0.5s]">
                    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="#25A8B5" stroke-width="2" class="mx-auto mb-4">
                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                        <polyline points="22 4 12 14.01 9 11.01"></polyline>
                    </svg>
                    <h3 class="text-2xl font-bold text-animundo-blue-med mb-2">¡Reserva confirmada!</h3>
                    <p class="text-animundo-brown mb-6">Gracias por tu compra. Redirigiendo...</p>
                    <div class="w-full bg-animundo-beige rounded-full h-2.5">
                        <div id="progressBar" class="bg-animundo-light-orange h-2.5 rounded-full" style="width: 100%"></div>
                    </div>
                </div>
            </div>
        `;
                    document.body.appendChild(modal);

                    // Animación de la barra de progreso
                    const progressBar = document.getElementById('progressBar');
                    let width = 100;
                    const interval = setInterval(() => {
                        width -= 1;
                        progressBar.style.width = width + '%';
                        if (width <= 0) {
                            clearInterval(interval);
                            location.reload(); // Recargar la página
                        }
                    }, 40); // 4 segundos para el 100%

                } catch (err) {
                    console.error('Error:', err);
                    // Modal de error
                    const errorModal = document.createElement('div');
                    errorModal.innerHTML = `
            <div class="fixed inset-0 bg-black bg-opacity-75 flex items-center justify-center z-50">
                <div class="bg-white rounded-xl p-8 max-w-md mx-4 text-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="#E66D09" stroke-width="2" class="mx-auto mb-4">
                        <circle cx="12" cy="12" r="10"></circle>
                        <line x1="12" y1="8" x2="12" y2="12"></line>
                        <line x1="12" y1="16" x2="12.01" y2="16"></line>
                    </svg>
                    <h3 class="text-2xl font-bold text-animundo-dark-orange mb-2">Error en la reserva</h3>
                    <p class="text-animundo-brown mb-6">${err.message}</p>
                    <button onclick="this.parentElement.parentElement.remove()" class="px-6 py-2 bg-animundo-light-orange text-white rounded-lg hover:bg-animundo-dark-orange transition">
                        Entendido
                    </button>
                </div>
            </div>
        `;
                    document.body.appendChild(errorModal);
                }
            });

            const comprarBtn = document.getElementById('irAComprarBtn');
            const destino = document.getElementById('formularioEntradas');

            comprarBtn.addEventListener('click', (e) => {
                e.preventDefault(); // Prevenir el comportamiento por defecto
                destino.scrollIntoView({ behavior: 'smooth' });
            });

        });
    </script>
