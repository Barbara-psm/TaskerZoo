                </div>

                <!-- Animal 7 -->
                <div
                    class="group bg-white rounded-xl overflow-hidden shadow-lg transition-transform transform hover:scale-105">
                    <img src="/img/lemures-animundo.jpg" alt="Lemures" class="w-full h-full object-cover">
                </div>

                <!-- Animal 8 -->
                <div
                    class="group bg-white rounded-xl overflow-hidden shadow-lg transition-transform transform hover:scale-105">
                    <img src="/img/pavo-real-animundo.jpg" alt="Pavo real" class="w-full h-full object-cover">
                </div>

                <!-- Animal 9 -->
