                    class="group bg-white rounded-xl overflow-hidden shadow-lg transition-transform transform hover:scale-105">
                    <img src="/img/oso-panda-animundo.webp" alt="Oso panda" class="w-full h-full object-cover">
                </div>

                <!-- Animal 10 -->
                <div
                    class="group bg-white rounded-xl overflow-hidden shadow-lg transition-transform transform hover:scale-105">
                    <img src="/img/tucanes-animundo.webp" alt="Tucanes" class="w-full h-full object-cover">
                </div>

                <!-- Animal 11 -->
