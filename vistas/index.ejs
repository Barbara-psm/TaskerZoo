    <!-- Sección Mapa -->
    <section class="w-full bg-animundo-beige py-16 px-4">
        <div
            class="container mx-auto max-w-4xl bg-white rounded-xl shadow-lg p-8 border-2 border-animundo-light-orange">
            <h2 class="text-3xl font-bold text-animundo-blue-med border-b-2 border-animundo-light-orange pb-3 mb-6">
                Ubicación</h2>
            <p class="mb-6 text-lg text-animundo-brown">Encuéntranos en el corazón de la ciudad</p>
            <div id="esriMap" class="h-96 rounded-lg border-2 border-animundo-brown"></div>
            <p class="text-center font-bold mt-6 text-animundo-dark-orange text-lg">
                Calle Animalia, 123 · Parque Natural Sierra Verde · 28045 Madrid, España
            </p>
        </div>
    </section>

    <!-- Sección Formulario -->
    <section id="formularioEntradas" class="w-full bg-animundo-beige py-16 px-4">
        <div
            class="container mx-auto max-w-4xl bg-white rounded-xl shadow-lg p-8 border-2 border-animundo-light-orange">
            <h2 class="text-3xl font-bold text-animundo-blue-med border-b-2 border-animundo-light-orange pb-3 mb-8">
                Compra tus entradas</h2>
            <form id="formularioEntradas" class="space-y-6">
                <!-- Fecha de visita -->
                <div class="bg-animundo-beige/50 p-4 rounded-lg border border-animundo-light-orange/30">
                    <label for="fechaVisita" class="block text-animundo-brown font-bold mb-2 text-lg">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none"
                            stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                            class="inline mr-2">
                            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                            <line x1="16" y1="2" x2="16" y2="6"></line>
                            <line x1="8" y1="2" x2="8" y2="6"></line>
                            <line x1="3" y1="10" x2="21" y2="10"></line>
                        </svg>
                        Fecha de visita
                    </label>
                    <input type="text" id="fechaVisita"
                        class="w-full px-4 py-3 border-2 border-animundo-light-blue rounded-lg focus:ring-2 focus:ring-animundo-blue-med focus:border-transparent text-lg bg-white"
                        placeholder="Selecciona una fecha" required>
                </div>

                <!-- Cantidad de entradas -->
                <div class="bg-animundo-beige/50 p-4 rounded-lg border border-animundo-light-orange/30">
                    <h3 class="text-xl font-bold text-animundo-blue-med mb-4 flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none"
                            stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                            class="inline mr-2">
                            <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                            <circle cx="8.5" cy="7" r="4"></circle>
                            <line x1="20" y1="8" x2="20" y2="14"></line>
                            <line x1="23" y1="11" x2="17" y2="11"></line>
                        </svg>
                        Selecciona tus entradas
                    </h3>

                    <div class="grid grid-cols-1 md:grid-cols-3 gap-5">
                        <!-- Adultos -->
                        <div class="bg-white p-3 rounded-lg border border-animundo-light-blue/50 shadow-sm">
                            <label for="cantidadAdultos"
                                class="block text-animundo-brown font-bold mb-2">Adultos</label>
                            <div class="flex items-center">
                                <span class="text-sm text-animundo-blue-med mr-2">(12+ años)</span>
                                <input type="number" id="cantidadAdultos" min="0" value="1"
                                    class="w-full px-3 py-2 border-2 border-animundo-light-blue rounded-lg focus:ring-2 focus:ring-animundo-blue-med text-center"
                                    required>
                            </div>
                            <p class="text-animundo-dark-orange font-semibold mt-2">€15 <span
                                    class="text-sm text-animundo-brown">por entrada</span></p>
                        </div>

                        <!-- Niños -->
                        <div class="bg-white p-3 rounded-lg border border-animundo-light-blue/50 shadow-sm">
                            <label for="cantidadNinos" class="block text-animundo-brown font-bold mb-2">Niños</label>
                            <div class="flex items-center">
                                <span class="text-sm text-animundo-blue-med mr-2">(3-11 años)</span>
                                <input type="number" id="cantidadNinos" min="0" value="0"
                                    class="w-full px-3 py-2 border-2 border-animundo-light-blue rounded-lg focus:ring-2 focus:ring-animundo-blue-med text-center">
                            </div>
                            <p class="text-animundo-dark-orange font-semibold mt-2">€10 <span
                                    class="text-sm text-animundo-brown">por entrada</span></p>
                        </div>

                        <!-- Seniors -->
                        <div class="bg-white p-3 rounded-lg border border-animundo-light-blue/50 shadow-sm">
                            <label for="cantidadSeniors"
                                class="block text-animundo-brown font-bold mb-2">Seniors</label>
                            <div class="flex items-center">
                                <span class="text-sm text-animundo-blue-med mr-2">(65+ años)</span>
                                <input type="number" id="cantidadSeniors" min="0" value="0"
                                    class="w-full px-3 py-2 border-2 border-animundo-light-blue rounded-lg focus:ring-2 focus:ring-animundo-blue-med text-center">
                            </div>
                            <p class="text-animundo-dark-orange font-semibold mt-2">€12 <span
                                    class="text-sm text-animundo-brown">por entrada</span></p>
                        </div>
                    </div>
                </div>

                <!-- Datos del comprador -->
                <div class="bg-animundo-beige/50 p-4 rounded-lg border border-animundo-light-orange/30">
                    <h3 class="text-xl font-bold text-animundo-blue-med mb-4 flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none"
                            stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                            class="inline mr-2">
                            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                            <circle cx="12" cy="7" r="4"></circle>
                        </svg>
                        Tus datos
                    </h3>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                        <!-- Nombre -->
                        <div>
                            <label for="nombre" class="block text-animundo-brown font-medium mb-1">Nombre
                                completo</label>
                            <input type="text" id="nombre" name="nombre"
                                class="w-full px-4 py-2 border-2 border-animundo-light-blue rounded-lg focus:ring-2 focus:ring-animundo-blue-med bg-white"
                                required>
                        </div>

                        <!-- Email -->
                        <div>
                            <label for="correo" class="block text-animundo-brown font-medium mb-1">Correo
                                electrónico</label>
                            <input type="email" id="correo" name="correo"
                                class="w-full px-4 py-2 border-2 border-animundo-light-blue rounded-lg focus:ring-2 focus:ring-animundo-blue-med bg-white"
                                required>
                        </div>
                    </div>

                    <!-- Teléfono -->
                    <div class="mt-4">
                        <label for="telefono" class="block text-animundo-brown font-medium mb-1">Teléfono</label>
                        <input type="tel" id="telefono" name="telefono"
                            class="w-full px-4 py-2 border-2 border-animundo-light-blue rounded-lg focus:ring-2 focus:ring-animundo-blue-med bg-white"
                            required>
                    </div>
                </div>

                <!-- Método de pago -->
                <div class="bg-animundo-beige/50 p-4 rounded-lg border border-animundo-light-orange/30">
                    <h3 class="text-xl font-bold text-animundo-blue-med mb-4 flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none"
                            stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                            class="inline mr-2">
                            <line x1="12" y1="19" x2="12" y2="5"></line>
                            <path d="M5 12l7-7 7 7"></path>
                        </svg>
                        Método de pago
                    </h3>

                    <div class="space-y-4">
                        <!-- Selección de método -->
                        <div>
                            <label for="metodo-pago" class="block text-animundo-brown font-medium mb-2">Seleccione
                                método de pago</label>
                            <select id="metodo-pago" name="metodo-pago"
                                class="w-full px-4 py-3 border-2 border-animundo-light-blue rounded-lg focus:ring-2 focus:ring-animundo-blue-med bg-white"
                                required>
                                <option value="" disabled selected>Seleccione una opción</option>
                                <option value="tarjeta">Tarjeta de crédito/débito</option>
                                <option value="paypal">PayPal</option>
                            </select>
                        </div>

                        <!-- Detalles de tarjeta -->
                        <div id="datos-tarjeta"
                            class="hidden space-y-4 bg-white p-4 rounded-lg border border-animundo-light-blue/50 shadow-sm">
                            <div>
                                <label for="num-tarjeta" class="block text-animundo-brown font-medium mb-1">Número de
                                    tarjeta</label>
                                <input type="text" id="num-tarjeta" name="num-tarjeta" placeholder="1234 5678 9012 3456"
                                    class="w-full px-4 py-2 border-2 border-animundo-light-blue rounded-lg focus:ring-2 focus:ring-animundo-blue-med">
                            </div>

                            <div class="grid grid-cols-2 gap-4">
                                <div>
                                    <label for="fecha-caducidad"
                                        class="block text-animundo-brown font-medium mb-1">Fecha de caducidad</label>
                                    <input type="month" id="fecha-caducidad" name="fecha-caducidad"
                                        class="w-full px-4 py-2 border-2 border-animundo-light-blue rounded-lg focus:ring-2 focus:ring-animundo-blue-med">
                                </div>
                                <div>
                                    <label for="cvc" class="block text-animundo-brown font-medium mb-1">Código
                                        CVC</label>
                                    <input type="text" id="cvc" name="cvc" maxlength="3" placeholder="123"
                                        class="w-full px-4 py-2 border-2 border-animundo-light-blue rounded-lg focus:ring-2 focus:ring-animundo-blue-med">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Resumen y botón de compra -->
                <div class="pt-4">
                    <div id="resumen-compra"
                        class="hidden mb-6 p-4 bg-white rounded-lg border-2 border-animundo-light-orange shadow-md">
                        <h4 class="text-xl font-bold text-animundo-blue-med mb-3 flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24"
                                fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                stroke-linejoin="round" class="inline mr-2">
                                <path d="M22 12h-4l-3 9L9 3l-3 9H2"></path>
                            </svg>
                            Resumen de tu compra
                        </h4>
                        <div id="detalles-resumen" class="text-animundo-brown"></div>
                        <div id="total-resumen" class="mt-3 text-2xl font-bold text-animundo-dark-orange"></div>
                    </div>

                    <button type="submit"
                        class="w-full bg-gradient-to-r from-animundo-light-orange to-animundo-dark-orange hover:from-animundo-dark-orange hover:to-animundo-light-orange text-white font-bold py-4 px-6 rounded-lg shadow-lg transition-all duration-300 transform hover:scale-[1.02] text-lg">
                        Confirmar compra
                    </button>
                </div>
            </form>
        </div>
    </section>

    <!-- Sección 4: Tarifas y horarios -->
