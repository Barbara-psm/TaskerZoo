    <meta name="description"
        content="Explora el zoológico Animundo y compra tus entradas fácilmente. Vive una experiencia educativa rodeado de animales y naturaleza.">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/css/estiloTaskerZooOutput.css">
    <link rel="icon" href="/favicons/faviconAnimundo.ico" type="image/x-icon">
