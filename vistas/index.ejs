<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TaskerZoo - Inicio</title>
    <link rel="stylesheet" href="/css/estiloTaskerZooOutput.css">
</head>

<body>
    <main class="relative bg-[#EDEDED] flex items-center justify-center min-h-screen min-w-full space-y-4">

        <!-- Intro TaskerZoo -->
        <div id="introTaskerZoo" class="absolute inset-0 flex items-center justify-center bg-[#EDEDED] z-50">
            <h1 class="text-5xl font-bold text-[#A2B04C] opacity-0 transition-opacity duration-1000">TaskerZoo</h1>
        </div>

        <!-- Botón de entrar -->
        <div class="flex items-center justify-center">
            <button id="btnEntrar"
                class="border-4 border-[#A2B04C] px-6 py-2 rounded font-semibold hover:bg-[#A2B04C] hover:text-white mt-8 opacity-0 transition-opacity duration-1000 hidden">
                Entrar
            </button>
        </div>

        <!-- Formularios que están ocultos inicialmente -->
        <!-- Formulario de registro -->
        <div id="formularioSignUp" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center">
            <form id="formSignUp" action="/signup" method="POST"
                class="flex-col gap-4 mt-6 bg-white p-6 rounded-xl shadow-md w-80 transform opacity-100 transition-all duration-500 ease-in-out">
                <!-- Nombre del empleado -->
                <div class="flex flex-col">
                    <label for="newUser" class="mb-1 text-sm font-medium text-gray-700">Nuevo usuario:</label>
                    <input type="text" name="newUser" placeholder="Nombre"
                        class="border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#A2B04C]">
                </div>
                <!-- Rol del empleado -->
                <div class="flex flex-col">
                    <label for="newRol" class="mb-1 text-sm font-medium text-gray-700">Rol:</label>
                    <select name="newRol" id="rol"
                        class="border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#A2B04C]">
                        <option value="cuidador">Cuidador</option>
                        <option value="veterinario">Veterinario</option>
                        <option value="admin">Administrador</option>
                        <option value="monitor">Monitor</option>
                        <option value="taquilla">Taquilla</option>
                    </select>
                </div>
                <!-- Correo del empleado -->
                <div class="flex flex-col">
                    <label for="newEmail" class="mb-1 text-sm font-medium text-gray-700">Correo electrónico:</label>
                    <input type="text" name="newEmail" placeholder="Correo"
                        class="border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#A2B04C]">
                </div>
                <!-- Contraseña del empleado -->
                <div class="flex flex-col">
                    <label for="newPassword" class="mb-1 text-sm font-medium text-gray-700">Contraseña:</label>
                    <input type="password" name="newPassword" placeholder="Contraseña"
                        class="border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#A2B04C]">
                </div>
                <!-- Mensaje de validación -->
                <p id="mensajeErrorLogin"></p>
                <!-- Botones del formulario -->
                <div class="flex justify-between mt-2">
                    <button type="reset"
                        class="bg-red-300 px-4 py-2 rounded-md text-sm font-medium hover:bg-gray-300 transition">Cancelar</button>
                    <button type="submit"
                        class="bg-[#A2B04C] text-white px-4 py-2 rounded-md text-sm font-medium hover:bg-[#8A993C] transition">Registrarse</button>
                </div>
                <div class="flex flex-row justify-between">
                    <button type="button"
                        class=" volverInicio mt-4 text-xs text-gray-500 hover:underline self-center"><a href="/">←
                            Volver</a></button>
                    <button type="button" id="irAlLogin"
                        class="mt-4 text-xs text-gray-500 hover:underline self-center">¿Ya tienes una cuenta? Ir a Log
                        in</button>
                </div>
            </form>
        </div>

        <!-- Formulario para iniciar sesión y crear la cookie -->
        <div id="formularioLogin" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center">
            <form id="formLogin" action="/loginEmpleado" method="POST"
                class="flex-col gap-4 mt-6 bg-white p-6 rounded-xl shadow-md w-80 transform opacity-100 transition-all duration-500 ease-in-out">
                <div class="bg-white p-8 rounded-lg">
                    <h2 class="text-2xl font-bold mb-4">Inicia sesión</h2>
                    <!-- Correo del empleado -->
                    <div class="flex flex-col">
                        <label for="empleadoEmail" class="mb-1 text-sm font-medium text-gray-700">Correo
                            electrónico:</label>
                        <input type="text" name="empleadoEmail" placeholder="Correo"
                            class="border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#A2B04C]">
                    </div>
                    <!-- Contraseña del empleado -->
                    <div class="flex flex-col">
                        <label for="empleadoPassword" class="mb-1 text-sm font-medium text-gray-700">Contraseña:</label>
                        <input type="password" name="empleadoPassword" placeholder="Contraseña"
                            class="border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#A2B04C]">
                    </div>
                    <!-- Mensaje de validación -->
                    <p id="mensajeErrorRegistro"></p>
                    <!-- Botones del formulario -->
                    <div class="flex justify-between mt-2">
                        <button type="reset"
                            class="bg-red-300 px-4 py-2 rounded-md text-sm font-medium hover:bg-gray-300 transition">Cancelar</button>
                        <button type="submit"
                            class="bg-[#A2B04C] text-white px-4 py-2 rounded-md text-sm font-medium hover:bg-[#8A993C] transition">Aceptar</button>
                    </div>
                    <div class="flex flex-row justify-between">
                        <button type="button"
                            class="volverInicio mt-4 text-xs text-gray-500 hover:underline self-center"><a href="/">←
                                Volver</a></button>
                        <button type="button" id="irAlSignup"
                            class="mt-4 text-xs text-gray-500 hover:underline self-center">¿No tienes una cuenta?
                            Regístrate</button>
                    </div>
                </div>
            </form>
        </div>
    </main>
    <script src="/js/codigoIndex.js"></script>
</body>

</html>